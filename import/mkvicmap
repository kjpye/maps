#!/usr/bin/env perl6

sub MAIN (:$db = 'maps') {
  for $*ARGFILES.lines -> $file is copy {
    next unless $file ~~ s/\.shp$//;
    my $table = $file;
    $table ~~ s/^.*\///;
    $table = 'vm_' ~ $table;
    my $cmd = "shp2pgsql -c -D -s 4326 $file $table | psql $db";
    note $cmd;
    shell $cmd;
  }
}
